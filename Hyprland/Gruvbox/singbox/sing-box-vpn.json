{
  "log": {
    "level": "info"
  },
  "dns": {
    "servers": [
      {
        "type": "local",
        "tag": "local"
      }
    ]
  },
  "inbounds": [
    {
      "type": "tun",
      "tag": "tun-in",
      "interface_name": "tun1",
      "address": "172.19.0.1/28",
      "mtu": 9000,
      "auto_route": true,
      "stack": "system",
      "endpoint_independent_nat": false
    }
  ],
  "outbounds": [
    {
      "type": "socks",
      "tag": "proxy",
      "server": "127.0.0.1",
      "server_port": 2080,
      "udp_fragment": true,
      "domain_resolver": "local"
    },
    {
      "type": "direct",
      "tag": "direct"
    }
  ],
  "route": {
    "final": "direct",
    "auto_detect_interface": true,
    "default_domain_resolver": {
      "server": "local",
      "rewrite_ttl": 60,
      "client_subnet": "8.8.8.8"
    },
    "rules": [
      {
        "source_ip_cidr": ["127.0.0.1"],
        "ip_cidr": ["127.0.0.1"],
        "action": "direct"
      },
      {
        "process_path_regex": ["^.*(firefox)$"],
        "outbound": "proxy"
      }
    ]
  }
}
